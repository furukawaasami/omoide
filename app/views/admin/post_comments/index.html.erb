<div class="container">
  <div class="row mt-5">
  <table class="table">
  <thead>
    <tr>
      <th>投稿日</th>
      <th>投稿</th>
      <th>コメント</th>
      <th>コメント投稿者</th
      <th></th>
    </tr>
  </thead>
  <tbody>
     <% @post_comments.each do |post_comment| %>
    <tr>
      <td><%= post_comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
      <td><%= link_to admin_post_path(post_comment.post.id) do %><%= post_comment.post.title %><% end %></td>
      <td><%= post_comment.comment %></td>
      <td><%= post_comment.end_user.nickname %></td>
      <td><%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, class: "btn btn-sm btn-danger" %></td>
    </tr>
    <% end %>
    <%= paginate @post_comments %>
  </tbody>
</table>
  </div>
</div>
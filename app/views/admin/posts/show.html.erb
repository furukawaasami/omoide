<div class="container">
  <div class="row mt-5">
    <h3>投稿詳細</h3>
  </div>
  <div class="row mt-5">
    <div class="col-6">
      <%= image_tag @post.get_image(500,500) %>
      <%= link_to "投稿を削除", admin_post_path(@post.id), method: :delete, class: "btn btn-danger" %>
    </div>
    <div class="col-6">
      <table class="table">
        <thead>
          <tr>
            <th>タイトル</th>
            <td><%= @post.title %></td>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>説明</th>
            <td><%= @post.explanation %></td>
          </tr>
          <tr>
            <th>コメント件数：<%= @post.post_comments.count %></th>
            <td>
              <% @post.post_comments.each do |post_comment| %>
              <%#= post_comment.end_user.nickname %>
              <%#= post_comment.created_at.strftime('%Y/%m/%d') %><%#= post_comment.comment %>
              <%#= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, class: "btn btn-sm btn-danger" %>
              <%# end %>
            </td>
          </tr>
          <tr>
            <th>
              <%= post_comment.created_at.strftime('%Y/%m/%d') %>
              <%= post_comment.end_user.nickname %><br>
              <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, class: "btn btn-sm btn-danger" %>
            </th>
            <td>
              <%= post_comment.comment %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

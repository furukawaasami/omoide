<div class="container">
  <div class="row mt-5">
    <table class="table">
      <thead>
        <tr>
          <th>投稿日</th>
          <th>イメージ</th>
          <th>タイトル</th>
          <th>投稿者</th>
          <th>コメント数</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |posts| %>
        <tr>
          <td><%= posts.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
          <td><%= image_tag posts.get_image(50,50) %></td>
          <td><%= link_to admin_post_path(posts.id) do %><%= posts.title %><% end %></td>
          <td><%= link_to admin_end_user_path(posts.end_user.id) do %><%= posts.end_user.nickname %><% end %></td>
          <td><%= posts.post_comments.count %></td>
        </tr>
        <% end %>
        <%= paginate @posts %>
      </tbody>
    </table>
  </div>
</div>

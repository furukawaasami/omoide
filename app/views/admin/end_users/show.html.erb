<div class="container">
  <div class="row mt-5">
    <h3>ユーザー詳細</h3>
  </div>
  <div class="row mt-2">
    <div class="col">
      ニックネーム：<%= @end_user.nickname %><br>
      メールアドレス：<%= @end_user.email%><br>
    </div>
    <div class="col">
      <%= form_with model: @end_user,url: admin_end_user_path(@end_user.id), method: :patch do |f| %>
      <%= f.radio_button :is_deleted, false %>有効
      <%= f.radio_button :is_deleted, true %>退会
      <%= f.submit '変更を保存',class: 'btn btn-sm  btn-success' %>
      <% end %>
    </div>
  </div>
  <div class="row mt-2">
    <table class="table">
  <thead>
    <tr>
      <th>登録日</th>
      <th>イメージ</th>
      <th>タイトル</th>
      <th>説明</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |posts| %>
    <tr>
      <td><%= posts.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= image_tag posts.get_image(50,50) %></td>
      <td><%= link_to admin_post_path(posts.id) do %><%= posts.title %><% end %></td>
      <td><%= posts.explanation %></td>
    </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>
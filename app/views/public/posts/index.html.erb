<% content_for(:body_attributes) do %>
  data-turbolinks="false"
<% end %>
投稿一覧
<% @posts.each do |posts| %>
<%=link_to post_path(posts.id) do %><%= posts.title %><% end %>
<%= posts.explanation %>
<%= image_tag posts.get_image(50,50) %>
<% end %>

<script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['YOUR_API_KEY'] %>&callback=initMap" async defer></script>

<!--<div id="display">何かが表示される、、、、！</div>-->
<div id='map'></div>
<input id="address" type="textbox" value="東京駅">
<input type="button" value="Encode" onclick="codeAddress()">
<style>
#map {
  height: 500px;
  width: 100%;
}
</style>

<script>
let map
let geocoder
let MarkerArray
const display = document.getElementById('display')
function initMap(){
  geocoder = new google.maps.Geocoder()
  MarkerArray = new google.maps.MVCArray();

  map = new google.maps.Map(document.getElementById('map'), {
    center: {lat: 35.68123620000001, lng:139.7671248},
    zoom: 7,
  });

  // 保存された地図情報からピンをさす
    <% @posts.each do |posts| %>
    // google.maps.LatLngインスタンスを生成
    pos = new google.maps.LatLng(
    <%=posts.latitude%>,
    <%=posts.longitude%>
    );
    default_marker = new google.maps.Marker({
    map: map,
    position: pos,
    });
    <% end %>
}

function codeAddress(){
  let inputAddress = document.getElementById('address').value;

  geocoder.geocode( { 'address': inputAddress}, function(results, status) {
    $("#post_latitude").val(results[0].geometry.location.lat());
    $("#post_longitude").val(results[0].geometry.location.lng());

    if (status == 'OK') {
       MarkerArray.forEach(function (marker, idx) { marker.setMap(null); });
      map.setCenter(results[0].geometry.location);
      MarkerArray.push(marker);
      display.textContent = "検索結果：" + results[ 0 ].geometry.location
    } else {
      alert('該当する結果がありませんでした：' + status);
    }
  });
}
</script>
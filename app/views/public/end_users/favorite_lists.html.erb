<div class="container">
  <div class="row mt-5">
    <h4>お気に入りの投稿</h4>
    </div>
    <div class="row　mt-5">
      <% @favorite_posts.each do |post|%>
      <div class="card-group">
  <div class="card">
    <div class="card__imgframe"><%= link_to post_path(post.id) do %><%= image_tag post.get_image(700,500) %><% end %></div>
    <div class="card__textbox">
      <div class="card__titletext">
        Nickname:<%= post.end_user.nickname %>さん<br>
        Title:<%=post.title %>
      </div>
      <div class="card__overviewtext">
        <% if @end_user == current_end_user %>
            <%= link_to post_favorites_path(post), method: :delete, class: "btn btn-outline-warning" do %>
            ♥いいね削除
            <% end %>
        <% end %>
      </div>
    </div>
  </div>
  </div>
    <% end %>
  </div>
</div>



<div class="container">
  <div class="row　mt-5">
    <h3>いいね一覧</h3>
    </div>
    <div class="row　mt-5">
      <table class="table">
      <thead>
        <tr>
          <th>イメージ</th>
          <th>タイトル</th>
          <th>投稿者</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @favorite_posts.each do |post|%>
        <tr>
          <td><%= image_tag post.get_image(50,50) %></td>
          <td><%= link_to post_path(post.id) do %><%=post.title %><% end %></td>
          <td><%= post.end_user.nickname %></td>
          <td>
              <%= link_to post_favorites_path(post), method: :delete, class: "btn btn-outline-warning" do %>
              ♥いいね削除
              <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


